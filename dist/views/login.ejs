    <div class="login-container">


      <div class="login-top">
        <h1 class="login-header">Log In</h1>
        <% if(loginMessage) { %>
          <div class="login-flash-message <%= messageType %>" id="login-flash-message">
            <p>
              <%= loginMessage %>
            </p>
            <button class="close-login-alert" id="close-login-alert"><i class="close-login-alert-icon">x</i></button>
          </div>


          <% } %>
      </div>

