      <div class="login-bottom">
        <div class="login-left-upper">
        <form class="login-form" id="login-form" action="/login" method="post">
          <div class="login-blocks">
          <div class="login-form-group">
            <!-- <label class="input-label" for="username">Username or Email:</label> -->
            <!-- <input class="form-input" type="text" id="username" name="username" placeholder="Email or Username"
            required> -->
            <div class="input-shell">
              <i class="input-icon fa-solid fa-user-large"></i>
              <div class="input-seperator"></div>
              <input class="form-input" type="text" id="username" name="username" placeholder="Username" required>
            </div>


          </div>
          <div class="login-form-group password-group">


            <div class="input-shell">
              <i class="input-icon fa-solid fa-key"></i>
              <div class="input-seperator"></div>
              <input class="form-input" type="password" id="password" name="password" placeholder="Password" required>
            </div>


          </div>
        </div>
          <div class="forgot-text-container">
            <a class='forgot-text-link login-forgot-password' href="/forgot-password">Forgot Password?</a>
  
            <a class='forgot-text-link login-forgot-username' href="/forgot-username">Forgot Username?</a>
          </div>

          <div class="signin-button-group">
            <button title="login-button" type="submit" class="login-form-button g-recaptcha"
              data-sitekey="6Ld1bOElAAAAAFQP-87plPiMToZYqojLl6P7NyGj" data-callback='onSubmit' data-action='submit'>Sign
              In</button>
          </div>
        </form>

 
      </div>

        <div class="divider">
          <div class="line"></div><span class="or">or</span>
          <div class="line"></div>
        </div>

        <div class="login-bottom-two">
          <div class="google-block">
          <form class="login-form-group google-login-group" id="google-login-form" action="/auth/google" method="GET">


            <button class="btn btn-primary login-form-button google-button  g-recaptcha"
            data-sitekey="6Ld1bOElAAAAAFQP-87plPiMToZYqojLl6P7NyGj" data-callback='onSubmitGoogle' data-action='submit' id="google" type="submit">


              Sign in with Google
            </button>
          </form>
        </div>




          <div class="login-create-account-container">
            <p class="login-create-account-text">Don't have an account?</p><a
              class='login-create-account-link login-create-account' href="/signup">Create Account</a>
          </div>



          <form class=" play-as-guest " id="guest-login-form" action="/guest" method="POST">
            <label for="guest"></label>
            <button class="login-form-button guest-button  g-recaptcha"
            data-sitekey="6Ld1bOElAAAAAFQP-87plPiMToZYqojLl6P7NyGj" data-callback='onSubmitGuest' data-action='submit' id="guest" type="submit">Play as
              guest</button>
          </form>
        </div>
      </div>

    </div>

  </div>


