          <form class="login-form-group" action="/auth/google" method="GET">
            <!-- <label for="google"></label> -->

            <button class="btn btn-primary login-form-button google-button" id="google" type="submit">
              <div class="google-icon-container"><i class="google-icon fa-brands fa-google "></i></div>
              <div class="google-text">Sign in with Google</div>
            </button>
          </form>





          <div class="divider">
            <div class="line"></div><span class="or">or</span>
            <div class="line"></div>
          </div>




          <form class="login-form" id="login-form" action="/login" method="post">

            <div class="login-form-group">
              <label class="input-label" for="username">Username or Email:</label>
              <input class="form-input" type="text" id="username" name="username"
                placeholder="Enter your username or email" required>
            </div>
            <div class="login-form-group">
              <label class="input-label" for="password">Password:</label>
              <input class="form-input" type="password" id="password" name="password" placeholder="Type your password"
                required>
            </div>
            <div class="login-form-group">
              <button title="login-button" type="submit" class="login-form-button">Sign In</button>
            </div>
          </form>



          <form class="create-account-container " action="/signup" method="GET">
            <label class="create-account-label" for="signup">Don't have an account? </label>
            <button class="create-account-link  new-account-button" id="signup" type="submit">Create
              Account</button>
          </form>


          <form class=" play-as-guest login-form-group" action="/guest" method="POST">
            <label for="guest"></label>
            <button class="login-form-button guest-button" id="guest" type="submit">Play as
              guest</button>
          </form>



    </div>




